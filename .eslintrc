{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "no-return-await": "warn",
    "no-tabs": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-extra-semi": "error",
    "no-console": "off",
    "react/prop-types": "warn",
    "no-unused-vars": "warn",
    "react/no-string-refs": "off"
  }
}
